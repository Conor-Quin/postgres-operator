{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "name": "postgres-operator"
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "postgres-operator"
                }
            },
            "spec": {
                "serviceAccountName": "postgres-operator",
                "containers": [
                    {
                        "name": "apiserver",
                        "image": "$CO_IMAGE_PREFIX/pgo-apiserver:$CO_IMAGE_TAG",
                        "imagePullPolicy": "IfNotPresent",
                        "ports": [
                            {
                                "containerPort": 8443
                            }
                        ],
                        "env": [
                            {
                                "name": "CRUNCHY_DEBUG",
                                "value": "true"
                            },
                            {
                                "name": "PORT",
                                "value": "8443"
                            },
                            {
                                "name": "NAMESPACE",
                                "value": "$NAMESPACE"
                            },
                            {
                                "name": "PGO_NAMESPACE",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.namespace"
                                    }
                                }
                            },
                            {
                                "name": "TLS_NO_VERIFY",
                                "value": "false"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/apiserver.local.config/certificates",
                                "name": "pgo-tls",
                                "readOnly": true
                            }
                        ]
                    },
                    {
                        "name": "operator",
                        "image": "$CO_IMAGE_PREFIX/postgres-operator:$CO_IMAGE_TAG",
                        "imagePullPolicy": "IfNotPresent",
                        "env": [
                            {
                                "name": "CRUNCHY_DEBUG",
                                "value": "true"
                            },
                            {
                                "name": "NAMESPACE",
                                "value": "$NAMESPACE"
                            },
                            {
                                "name": "PGO_NAMESPACE",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.namespace"
                                    }
                                }
                            },
                            {
                                "name": "MY_POD_NAME",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.name"
                                    }
                                }
                            }
                        ],
                        "volumeMounts": [
                        ]
                    },
                    {
                        "name": "scheduler",
                        "image": "$CO_IMAGE_PREFIX/pgo-scheduler:$CO_IMAGE_TAG",
                        "env": [
                            {
                                "name": "PGO_NAMESPACE",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.namespace"
                                    }
                                }
                            },
                            {
                                "name": "NAMESPACE",
                                "value": "$NAMESPACE"
                            },
                            {
                                "name": "TIMEOUT",
                                "value": "3600"
                            }
                        ],
                        "volumeMounts": [
                        ],
                        "resources": {},
                        "imagePullPolicy": "IfNotPresent"
                    }
                ],
                "volumes": [
                    {
                        "name": "pgo-tls",
                        "secret": {
                            "secretName": "pgo.tls",
                            "defaultMode": 511
                        }
                    }
                ]
            }
        }
    }
}
